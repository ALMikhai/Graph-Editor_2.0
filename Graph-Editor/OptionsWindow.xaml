<Window x:Class="Graph_Editor.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graph_Editor"
        mc:Ignorable="d"
        Title="OptionsWindow" Height="688.565" Width="912.216" ResizeMode="NoResize">
    <Grid>
        <ToolBarPanel HorizontalAlignment="Left" Height="660" VerticalAlignment="Top" Width="162">
            <Button x:Name="ThemeButton" Content="Theme" Margin="5 10 5 0" Height="100"
                    FontSize="25" FontWeight="DemiBold" Foreground="Black" Background="Gray" Click="ChooseThemeMenu"></Button>
            <Button x:Name="VertexEdgeButton" Content="Vertex/Edge" Margin="5 10 5 0" Height="100" 
                    FontSize="25" FontWeight="DemiBold" Foreground="Black" Background="LightGray" Click="ChooseVertex_Edge_Menu" ></Button>
            <Button x:Name="AnimationButton" Content="Animation" Margin="5,10,5,0" Height="100"
                    FontSize="25" FontWeight="DemiBold" Foreground="Black" Background="LightGray" Click="ChooseAnimationMenu"></Button>
        </ToolBarPanel>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="660" Margin="167,0,0,0" VerticalAlignment="Top" Width="1"/>

        <Grid x:Name="ThemeGrid" Margin="173,0,0,0" Visibility="Visible">
            <Button x:Name="LightTheme" Background="Transparent" FontSize="35" Content="Light Theme" Margin="34,89,495,487"/>
            <Image Source="images/Themes/LightTheme.png" Width="350" Height="240" Margin="286,30,97,390"/>

            <Button x:Name="DarkTheme" Background="Transparent" FontSize="35" Content="Dark Theme" Margin="34,450,495,126" />
            <Image Source="images/Themes/LightTheme.png" Width="350" Height="240" Margin="286,369,97,51" />
        </Grid>
        <Grid x:Name="VertexEdgeGrid" Margin="173,0,0,0" Visibility="Hidden">
            <Label Content="Style" FontSize="50" Margin="116,63,478,511"/>

            <Label Content="Vertex: " FontSize="35" Margin="0,222,600,370"/>
            <Button x:Name="vBlack"  Background="Black"  HorizontalAlignment="Left" Height="25" Margin="120,175,0,0" VerticalAlignment="Top" Width="30" Click="ChangeVertexColorButton_Click"/>
            <Button x:Name="vYellow" Background="Yellow" HorizontalAlignment="Left" Height="25" Margin="155,175,0,0" VerticalAlignment="Top" Width="30" Click="ChangeVertexColorButton_Click"/>
            <Button x:Name="vGreen"  Background="Green"  HorizontalAlignment="Left" Height="25" Margin="190,175,0,0" VerticalAlignment="Top" Width="30" Click="ChangeVertexColorButton_Click"/>
            <Button x:Name="vBlue"   Background="Blue"   HorizontalAlignment="Left" Height="25" Margin="225,175,0,0" VerticalAlignment="Top" Width="30" Click="ChangeVertexColorButton_Click"/>

            <Label Content="Edge: " FontSize="35" Margin="0,154,600,438"/>
            <Button x:Name="eLightBlue" Background="#80FFFF" HorizontalAlignment="Left" Height="25" Margin="120,240,0,0" VerticalAlignment="Top" Width="30" Click="ChangeEdgeColorButton_Click"/>
            <Button x:Name="eYellow"    Background="Yellow"  HorizontalAlignment="Left" Height="25" Margin="155,240,0,0" VerticalAlignment="Top" Width="30" Click="ChangeEdgeColorButton_Click"/>
            <Button x:Name="eGreen"     Background="Green"   HorizontalAlignment="Left" Height="25" Margin="190,240,0,0" VerticalAlignment="Top" Width="30" Click="ChangeEdgeColorButton_Click"/>
            <Button x:Name="eBlue"      Background="Blue"    HorizontalAlignment="Left" Height="25" Margin="225,240,0,0" VerticalAlignment="Top" Width="30" Click="ChangeEdgeColorButton_Click"/>

            <Button Background="Gray"         BorderThickness="0" Content="Reset" FontSize="23" Margin="65,309,583,306"  Width="85" Click="Reset_Click"/>
            <Button Background="DarkSeaGreen" BorderThickness="0" Content="Check"  FontSize="23" Margin="150,309,478,306" Click="Check_Click"/>


            <Button Content="OK"    FontSize="35" Margin="190,592,395,10" Click="OK_Click"/>
            <Button Content="Close" FontSize="35" Margin="10,592,563,10" Click="Exit"/>

            <Image Source="images/Themes/tmp.png" Margin="398,0,0,0"/>
        </Grid>
        <Grid x:Name="AnimationGrid" Margin="173,0,0,0" Visibility="Hidden">
            <Label Content="Animation Speed" FontSize="50" FontWeight="DemiBold" FontStyle="Italic" HorizontalContentAlignment="Center" Margin="139,10,144,567"/>
            <Button x:Name="Slow" Content="Slow" FontSize="25" Margin="38,129,572,479" Click="ChooseSlowAnimation"/>
            <Button x:Name="Medium" Content="Medium" FontSize="25" Margin="220,129,391,479" Click="ChooseMediumAnimation"/>
            <Button x:Name="Fast" Content="Fast" FontSize="25" Margin="399,129,210,479" Click="ChooseFastAnimation"/>
            <Button x:Name="VeryFast" Content="Very fast" FontSize="25" Margin="572,129,39,479" Click="ChooseVeryFastAnimation"/>
            <Label Content="Speed: " FontSize="45" Margin="0,258,572,327"/>

            <Label Content="Color animation: "  FontSize="45" Margin="0,387,371,194"/>
            <Button x:Name="orbBlue"  Background="Blue"  HorizontalAlignment="Left" Height="25" Margin="367,416,0,0" VerticalAlignment="Top" Width="30" Click="ChangeBallColorButton_Click"/>
            <Button x:Name="orbYellow" Background="Yellow" HorizontalAlignment="Left" Height="25" Margin="409,416,0,0" VerticalAlignment="Top" Width="30" Click="ChangeBallColorButton_Click"/>
            <Button x:Name="orbGreen"  Background="Green"  HorizontalAlignment="Left" Height="25" Margin="451,416,0,0" VerticalAlignment="Top" Width="30" Click="ChangeBallColorButton_Click"/>
            <Button x:Name="orbBlack"   Background="Black"   HorizontalAlignment="Left" Height="25" Margin="493,416,0,0" VerticalAlignment="Top" Width="30" Click="ChangeBallColorButton_Click"/>
            <Button x:Name="orbRed"    Background="Red"    HorizontalAlignment="Left" Height="25" Margin="533,416,0,0" VerticalAlignment="Top" Width="30" Click="ChangeBallColorButton_Click"/>

            <Button Content="Reset" FontSize="25" Margin="468,458,170,150" Click="ResetAnimationColor_Click"/>
            <Slider x:Name="SpeedSlider"
                    Foreground="Black" Background="Transparent"
                    Maximum="100" Minimum="1" SmallChange="1" LargeChange="10"
                    TickPlacement="BottomRight" TickFrequency="10"
                    IsSelectionRangeEnabled="True" SelectionStart="1" ValueChanged="Slider_ValueChanged"
                    HorizontalAlignment="Left"
                    Margin="161,290,0,0" VerticalAlignment="Top" Width="336" Height="43"
            />
            <TextBox x:Name="TextBox_Speed"
                     FontSize="35"
                     Background="Transparent" Foreground="Black"
                     TextAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top"
                     Height="75" Margin="502,258,0,0" Width="129"
                     TextWrapping="Wrap" Text="1" TextChanged="TextBox_Speed_TextChanged"
            />

            <Button Content="OK"    FontSize="35" Margin="190,592,395,10" Click="animationOK_Click"/>
            <Button Content="Close" FontSize="35" Margin="10,592,563,10" Click="Exit"/>
        </Grid>

    </Grid>
</Window>

<Window x:Class="Graph_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graph_Editor"
        mc:Ignorable="d"
        Title="GraphEditor" Height="720" Width="1080" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}" Width="70" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border BorderThickness="0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#0a3f4c">
        <Canvas x:Name="graphCanvas" 
                Margin="182,10,10,10" 
                Background="#b7e1e1"
                MouseDown="GraphCanvas_MouseDown"
                MouseMove="GraphCanvas_MouseMove"
                MouseLeave="GraphCanvas_MouseLeave"
                MouseUp="GraphCanvas_MouseUp"
                ClipToBounds="True">
        </Canvas>
        <Button x:Name="Algorimts_Window"
            Content="Algoritms" BorderThickness="0"
            HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top"
            Width="167" Height="56" Background="#345160"
            FontSize="20" FontWeight="DemiBold" Click="Algoritm_Button"
        />
        <Button Style="{StaticResource MyButtonStyle}" x:Name="AddVertex"
                Tag="0" Background="#345160"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="56,283,0,0"
                Click="Change_Tool_Button" MouseLeave="Button_MouseLeave" MouseMove="Button_MouseMove">
                <Image Source="images/vertexIcon.png"/>
        </Button>
        <Button Style="{StaticResource MyButtonStyle}" x:Name="MoveVertex"
                Tag="1" Background="#345160"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="56,387,0,0"
                Click="Change_Tool_Button"  MouseLeave="Button_MouseLeave" MouseMove="Button_MouseMove">
            <Image Source="images\handTool.png" Width="64"/>
        </Button>
        <Button Style="{StaticResource MyButtonStyle}" x:Name="Connect" Background="#345160"
                HorizontalAlignment="Left" Margin="56,491,0,0" VerticalAlignment="Top"
                FontSize="20" FontWeight="DemiBold" Tag="2"
                Click="Connect_Click"  MouseLeave="Button_MouseLeave" MouseMove="Button_MouseMove">
            <Image Source="images\edgeIcon.png" Width="64" Height="64"/>
        </Button>

        <!-- Background="LightGray" (to Down)-->
        <Grid
            x:Name="WaitPanel"
            Opacity="0.4"
        />
        <Label Content=".TXT" Background="#b7e1e1"
                   HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"       
                   Width="150" Height="56"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   FontSize="30" FontWeight="bold" BorderBrush="black" BorderThickness="1" 
        />
        <Image Source="images/logo.png" Margin="10,584,954,10"/>
    </Grid>
</Window>

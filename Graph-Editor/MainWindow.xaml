<Window x:Class="Graph_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graph_Editor"
        mc:Ignorable="d"
        Title="GraphEditor" Height="720" Width="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="341*"/>
            <RowDefinition Height="348*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="graphCanvas" Margin="192,10,10,10" Background="LightGray" Grid.RowSpan="2" MouseDown="GraphCanvas_MouseDown"/>
        <Button x:Name="Connect"
                Content="Connect vertexes"
                HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top"
                Width="167" Height="56"
                FontSize="20" FontWeight="DemiBold"
                Click="Connect_Click_1"
        />

        <!-- Background="LightGray" (to Down)-->
        <Grid
            x:Name="WaitPanel"
            Opacity="0.4"
            Grid.ColumnSpan="20" Grid.RowSpan="20">
        </Grid>
        <Button x:Name="Algorimts_Window"
            Content="Algoritms"
            HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top"
            Width="167" Height="56"
            FontSize="20" FontWeight="DemiBold" Click="Button_Click"
        />
        <Label Content=".TXT"
                   HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"       
                   Width="150" Height="56"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   FontSize="30" FontWeight="bold" BorderBrush="black" BorderThickness="1" 
        />
        <Image 
                HorizontalAlignment="Left" Height="60"
                Margin="10,278,0,0" VerticalAlignment="Top" Width="74"
                Source="C:\Users\salus\OneDrive\Рабочий стол\GraphEditor\Graph-Editor_2.0\images\logo.png" Grid.Row="1"
        />
    </Grid>
</Window>
